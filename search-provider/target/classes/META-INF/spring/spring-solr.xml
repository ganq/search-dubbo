<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="announcementsSolr" class="com.mysoft.b2b.search.solr.SolrQueryEnhanced" init-method="init">
		<property name="url" value="${announcements.url}" ></property>
		<property name="soTimeOut" value="${announcements.soTimeOut}"></property>
		<property name="connectionTimeOut" value="${announcements.connectionTimeOut}"></property>
		<property name="maxConnectionsPerHost" value="${announcements.maxConnectionsPerHost}"></property>
		<property name="maxTotalConnections" value="${announcements.maxTotalConnections}"></property>
		<property name="maxRetries" value="${announcements.maxRetries}"></property>
	</bean>

	<bean id="categorySolr" class="com.mysoft.b2b.search.solr.SolrQueryEnhanced" init-method="init">
		<property name="url" value="${category.url}" ></property>
