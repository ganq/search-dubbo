		<property name="connectionTimeOut" value="${category.connectionTimeOut}"></property>
		<property name="maxConnectionsPerHost" value="${category.maxConnectionsPerHost}"></property>
		<property name="maxTotalConnections" value="${category.maxTotalConnections}"></property>
		<property name="maxRetries" value="${category.maxRetries}"></property>
	</bean>

	<bean id="supplierSolr" class="com.mysoft.b2b.search.solr.SolrQueryEnhanced" init-method="init">
		<property name="url" value="${supplier.url}" ></property>
		<property name="soTimeOut" value="${supplier.soTimeOut}"></property>
		<property name="connectionTimeOut" value="${supplier.connectionTimeOut}"></property>
		<property name="maxConnectionsPerHost" value="${supplier.maxConnectionsPerHost}"></property>
		<property name="maxTotalConnections" value="${supplier.maxTotalConnections}"></property>
		<property name="maxRetries" value="${supplier.maxRetries}"></property>
	</bean>
		
	<bean id="developerSolr" class="com.mysoft.b2b.search.solr.SolrQueryEnhanced" init-method="init">
		<property name="url" value="${developer.url}" ></property>
		<property name="soTimeOut" value="${developer.soTimeOut}"></property>
		<property name="connectionTimeOut" value="${developer.connectionTimeOut}"></property>
		<property name="maxConnectionsPerHost" value="${developer.maxConnectionsPerHost}"></property>
		<property name="maxTotalConnections" value="${developer.maxTotalConnections}"></property>
		<property name="maxRetries" value="${developer.maxRetries}"></property>
	</bean>

    <bean id="recruitSolr" class="com.mysoft.b2b.search.solr.SolrQueryEnhanced" init-method="init">
        <property name="url" value="${recruit.url}" ></property>
        <property name="soTimeOut" value="${recruit.soTimeOut}"></property>
        <property name="connectionTimeOut" value="${recruit.connectionTimeOut}"></property>
        <property name="maxConnectionsPerHost" value="${recruit.maxConnectionsPerHost}"></property>
        <property name="maxTotalConnections" value="${recruit.maxTotalConnections}"></property>
        <property name="maxRetries" value="${recruit.maxRetries}"></property>
    </bean>
</beans>